@page
@model WebApp_undertheHood.Pages.HRManagerModel
@{
    ViewData["Title"] = "HR Manager Dashboard";
}

<div class="container py-5 fade-in-up">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-gradient">
            <i class="bi bi-person-gear me-2"></i> HR Manager Dashboard
        </h1>
        <p class="lead text-muted">Welcome back! Monitor employee data, review reports, and take quick actions — all in
            one place.</p>
    </div>

    <div class="row g-4">
        <!-- Employee Management -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0 hover-shadow">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-people-fill me-2 fs-5"></i>
                    <span class="fw-semibold">Employee Management</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a asp-page="/HRManager/Employees" class="text-decoration-none">
                                👥 View Employees
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a asp-page="/HRManager/AddEmployee" class="text-decoration-none">
                                ➕ Add New Employee
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a asp-page="/HRManager/UpdateEmployee" class="text-decoration-none">
                                ✏️ Update Employee Info
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Reports -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0 hover-shadow">
                <div class="card-header bg-success text-white d-flex align-items-center">
                    <i class="bi bi-bar-chart-line-fill me-2 fs-5"></i>
                    <span class="fw-semibold">Reports</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a asp-page="/HRManager/Reports/Attendance" class="text-decoration-none">
                                📅 Attendance Report
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a asp-page="/HRManager/Reports/Leave" class="text-decoration-none">
                                📝 Leave Report
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a asp-page="/HRManager/Reports/Performance" class="text-decoration-none">
                                📊 Performance Review
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0 hover-shadow">
                <div class="card-header bg-info text-white d-flex align-items-center">
                    <i class="bi bi-lightning-fill me-2 fs-5"></i>
                    <span class="fw-semibold">Quick Actions</span>
                </div>
                <div class="card-body d-grid gap-3">
                    <button class="btn btn-outline-primary pulse-on-hover">
                        ✅ Approve Leave Requests
                    </button>
                    <button class="btn btn-outline-secondary pulse-on-hover">
                        📢 Send Company Announcement
                    </button>
                    <button class="btn btn-outline-danger pulse-on-hover">
                        🚨 Flag HR Issue
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

 
    @if(Model.WeatherForecastItems is not null)
    {
        @foreach(var item in Model.weatherForecastItems)
        {
            <div>
                <h5>@item.Date.ToString("MMMM dd, yyyy")</h5>
                <p>Temperature: @item.TemperatureC °C</p>
                <p>Summary: @item.Summary</p>
            </div>
        }
    }

