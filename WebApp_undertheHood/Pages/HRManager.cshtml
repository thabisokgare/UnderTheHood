@page
@model WebApp_undertheHood.Pages.HRManagerModel
@{
    ViewData["Title"] = "HR Manager Dashboard";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(to right, #f8f9fa, #e0f7fa);
        margin: 0;
        padding: 20px;
    }

    .dashboard-title {
        text-align: center;
        font-size: 2.5rem;
        color: #0078D7;
        margin-bottom: 30px;
        text-shadow: 1px 1px 2px #ccc;
        animation: fadeInDown 1s ease-out;
    }

    table {
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        animation: fadeInUp 1s ease-out;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #0078D7;
        color: white;
        font-size: 1.1rem;
    }

    tr:hover {
        background-color: #f1f1f1;
        transform: scale(1.01);
        transition: all 0.3s ease;
    }

    td {
        color: #333;
        font-size: 1rem;
    }

    
    }
</style>

<h1 class="dashboard-title">HR Manager Dashboard</h1>

@if (Model.WeatherForecastsItems is not null)
{
    <table>
        <thead>
            <tr>
                <th>Summary</th>
                <th>Date</th>
                <th>Temperature (°C)</th>
                <th>Temperature (°F)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.WeatherForecastsItems)
            {
                <tr>
                    <td>@items.Summary</td>
                    <td>@items.Date.ToShortDateString()</td>
                    <td>@items.TemperatureC</td>
                    <td>@items.TemperatureF</td>
                </tr>
            }
        </tbody>
    </table>
}
