@page
@model IndexModel
@{
    ViewData["Title"] = "HR Portal Home";
}

<div class="container py-5">
    <section class="text-center mb-5">
        <div class="p-5 bg-gradient bg-light rounded shadow-sm">
            <h1 class="display-5 fw-bold text-primary">Welcome to the HR Portal</h1>
            <p class="lead text-muted">Manage employees, reports, and HR tasks securely and efficiently.</p>
            <div class="mt-4">
            
            </div>
        </div>
    </section>

    <section class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-shield-lock-fill me-2"></i> Security Features
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Cookie-based Authentication</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Role & Claim-based Authorization</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Custom HR Manager Policies</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-tools me-2"></i> HR Tools
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Employee Management</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Attendance & Leave Reports</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Performance Reviews</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-rocket-takeoff-fill me-2"></i> Get Started
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Login to your dashboard</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Explore HR features</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Contact support for help</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>
